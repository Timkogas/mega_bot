<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telegram Bot Web App</title>
    <script src="//cdn.jsdelivr.net/npm/eruda"></script>
    <script>
        eruda.init();
    </script>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
</head>

<body style="color:var(--tg-theme-text-color); font-family: Arial, sans-serif;">
    <h1>Leaderboard</h1>

    <div id="leaderboard">
        <ul>
            <% topUsers.forEach((user, index) => { %>
                <li>
                    <% if (window.Telegram.WebApp.initDataUnsafe.user.id === user.id) { %>
                        <strong>
                    <% } %>
                    <%= index + 1 %>. <%= user.first_name %> <%= user.last_name %> - <%= user.score %> points
                    <% if (window.Telegram.WebApp.initDataUnsafe.user.id === user.id) { %>
                        </strong>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    </div>
</body>

</html>